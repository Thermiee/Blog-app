<div class="container">
    <%= form_with model: @post, url: user_posts_path do |form| %>
      <div class="mb-3">
        <%= form.label :title, "Title:", class: "form-label" %>
        <%= form.text_field :title, class: "form-control", placeholder: "type something" %>
      </div>
      <div class="mb-3">
        <%= form.label :text, class: "form-label" %>
        <%= form.text_area :text, class: "form-control", placeholder: "type something" %>
      </div>
      <%= form.submit "Create Post", class: "btn btn-primary" %>
    <% end %>
  </div>